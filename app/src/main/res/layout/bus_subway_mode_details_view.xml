<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingRight="@dimen/card_padding"
    android:paddingLeft="@dimen/card_padding">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/routes_type_margin">

        <TextView
            android:id="@+id/lbl_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PrimaryTextStyle"
            android:text="12:45"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lbl_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PrimaryTextStyle"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/indicator_view"
        android:layout_width="16dp"
        android:layout_height="120dp"
        android:layout_marginRight="@dimen/routes_type_margin">

        <View
            android:id="@+id/indicator_header"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/marker"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />
        <View
            android:id="@+id/indicator_body"
            android:layout_width="12dp"
            android:layout_height="97dp"
            android:background="@color/colorAccent"
            android:layout_below="@id/indicator_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-7dp"/>
        <View
            android:id="@+id/indicator_bottom"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/marker"
            android:layout_below="@id/indicator_body"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-5dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/info_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lbl_start_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PrimaryTextStyle"
            android:text="Leipziger PL. 7"
            android:textStyle="bold"
            android:layout_alignParentTop="true" />

        <TextView
        android:id="@+id/lbl_stops_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PrimaryTextStyle"
        android:textSize="10sp"
        android:text="Walk 3 minutes"
        android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/lbl__stops_from_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PrimaryTextStyle"
            android:textSize="10sp"
            android:text="S1 -> S Wannsee"
            android:layout_centerVertical="true"
            android:layout_marginBottom="6dp"
            android:layout_above="@id/lbl_stops_duration"/>

        <TextView
            android:id="@+id/lbl_end_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PrimaryTextStyle"
            android:text=""
            android:textStyle="bold"
            android:layout_alignParentBottom="true" />


    </RelativeLayout>


</LinearLayout>